{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    },
    "mcp#dev": {
      "cache": false,
      "persistent": true
    },
    "mcp#build": {
      "outputs": ["dist/**"]
    },
    "mcp#test": {
      "outputs": ["coverage/**", ".pytest_cache/**"]
    }
  }
}
